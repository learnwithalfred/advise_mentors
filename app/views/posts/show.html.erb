<div>
  <h1>
    <%= @post.title %> by <%= @post.user.name %>
    <br>
    Comments ( <%= @post.comments.count %> )
    Likes ( <%= @post.likes.count %> )
  </h1>

  <br><br>
  <h1>Post content</h1>
  <hr>
  <p>
    <%= @post.text %>
  </p>
  <hr><br><br>
  <h3>Comments</h3>
  <hr>
  <% @post.comments.each do |comment| %>
  <div>
    <p>
      <%= comment.user.name %> : <%= comment.text %>
    </p>
  </div>
  <% end %>
  <hr>
</div>
