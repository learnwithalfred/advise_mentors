<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>



<div class="mt-6">
  <%= f.label "Full Name", class:"block text-sm font-medium leading-5
        text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",
          placeholder:"Full Name", class: "transition border focus:outline-none
          focus:shadow-outline-blue block w-full appearance-none rounded-md
          border-gray-300 px-3 py-2 placeholder-gray-400 duration-150
          ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5",
          required:"true" %>
  </div>
</div>
<div class="mt-6">
  <%= f.label "Photo URL", class:"block text-sm font-medium leading-5
        text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.text_field :photo, autofocus: true, autocomplete: "photo",
          placeholder:"Photo URL", class: "transition border focus:outline-none
          focus:shadow-outline-blue block w-full appearance-none rounded-md
          border-gray-300 px-3 py-2 placeholder-gray-400 duration-150
          ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900",
          required:"true" %>
  </div>
</div>

<div class="mt-6">
  <%= f.label "Bio", class:"block text-sm font-medium leading-5
        text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio",
          placeholder:"Bio", class: "transition border focus:outline-none
          focus:shadow-outline-blue block w-full appearance-none rounded-md
          border-gray-300 px-3 py-2 placeholder-gray-400 duration-150
          ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900",
          required:"true" %>
  </div>
</div>


<div class="mt-6">
  <%= f.label :email, class:"block text-sm font-medium leading-5 text-bb-gray-700" %><i>(leave blank if you don't
    want to change it)</i><br />
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email Address", class: "transition border focus:outline-none focus:shadow-outline-blue block w-full appearance-none rounded-md border-gray-300 px-3 py-2 placeholder-gray-400 duration-150 ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900", required:"true" %>
  </div>
</div>

<div class="mt-6">
  <%= f.label :password, class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class: "transition border focus:outline-none focus:shadow-outline-blue block w-full appearance-none rounded-md border-gray-300 px-3 py-2 placeholder-gray-400 duration-150 ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900" %>
    <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
</div>

<div class="mt-6">
  <%= f.label :password_confirmation, class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class: "transition border focus:outline-none focus:shadow-outline-blue block w-full appearance-none rounded-md border-gray-300 px-3 py-2 placeholder-gray-400 duration-150 ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900"%>
  </div>
</div>

<div class="mt-6">
  <%= f.label :current_password, class:"block text-sm font-medium leading-5 text-bb-gray-700" %>
  <div class="mt-1 rounded-md shadow-sm">
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Current Password", class: "transition border focus:outline-none focus:shadow-outline-blue block w-full appearance-none rounded-md border-gray-300 px-3 py-2 placeholder-gray-400 duration-150 ease-in-out focus:border-blue-300 sm:text-sm sm:leading-5 text-gray-900", required:"true" %>
  </div>
</div>

<div class="mt-6">
  <%= f.submit "Update", class: "transition border bg-blue-500
      hover:bg-blue-700 focus:outline-none group relative flex w-full
      justify-center rounded-md border-transparent px-4 py-2 my-4 text-sm
      font-medium leading-5 text-white duration-150 ease-in-out" %>
</div>
</div>
</div>


</div>
</div>

<% end %>
